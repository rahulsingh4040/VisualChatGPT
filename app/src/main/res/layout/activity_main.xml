<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageSrc"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="20dp"
        android:clickable="false"
        android:contentDescription="@string/image_preview"
        android:padding="1dp"
        android:background="@drawable/border_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/selectImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#147F69"
        android:text="@string/select_image_from_gallery"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/selectCameraButton"
        app:layout_constraintTop_toBottomOf="@id/imageSrc"
        app:layout_constraintBottom_toTopOf="@id/textLayout"/>

    <Button
        android:id="@+id/selectCameraButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#147F69"
        android:text="@string/open_camera"
        app:layout_constraintStart_toEndOf="@id/selectImageButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageSrc"
        app:layout_constraintBottom_toTopOf="@id/textLayout"/>

    <ScrollView
        android:id="@+id/textLayout"
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="270dp"
        android:layout_marginTop="60dp"
        android:background="#CFF8FD"
        app:layout_constraintTop_toBottomOf="@id/imageSrc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/imageText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#147F69"
            android:textSize="15sp"
            android:text="@string/extracted_text_here"
            android:gravity="center" />

    </ScrollView>

    <Button
        android:id="@+id/genTextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/extract_text"
        android:textColor="#147F69"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@id/textLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/aiBtn"
        app:layout_constraintBottom_toBottomOf="parent"/>


    <Button
        android:id="@+id/aiBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search_using_ai"
        android:textColor="#147F69"
        android:layout_marginBottom="20dp"
        app:layout_constraintEnd_toStartOf="@id/cpyBtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/genTextButton"
        app:layout_constraintTop_toBottomOf="@+id/textLayout" />


    <ImageButton
        android:id="@+id/cpyBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/copy_icon"
        app:tint="@color/copy_btn_color"
        android:background="#00FFFFFF"
        android:layout_marginBottom="25dp"
        android:contentDescription="@string/copy_button"
        app:layout_constraintStart_toEndOf="@id/aiBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textLayout"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/developerLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:gravity="end"
        android:layout_marginEnd="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/developer_contact_rahul_singh"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>